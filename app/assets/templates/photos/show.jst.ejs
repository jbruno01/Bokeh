
  <div class="image-window group">
    <img src="ajax-loader.gif" class="loader-gif"/>
    <img class="main-photo" src="<%= photo.escape("original_url") %>"/>
  </div>

  <div class="photo-info group">
  </div>

  <div class="comment-tag-container group">
    <section class="comment-index">
    </section>

    <section class="tag-container">
      <div class="title-and-errors group">
        <h2 class="tag-title">Tags</h2>
        <h2 class="tag-error red-error"></h2>
      </div>
      <% if(photo.user().id === Bokeh.currentUser.id) { %>
        <form class="new-tag">
          <input class="tag-name" name="tagging[name]"type="text" placeholder="Add a tag">
          <button class="add-tag blue-button">Add</button>
        </form>
      <% } %>
      <div class="tag-index group">
      </div>
    </section>
  </div>
