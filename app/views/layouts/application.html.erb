<!DOCTYPE html>
<html>
<head>
  <title>Bokeh</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <h2>Bokeh</h2>

  <% if signed_in? %>
    <a href="<%= user_url(current_user) %>"><%= current_user.email %></a>
    <%= button_to "Sign Out", session_url, :method => :delete %>
  <% else %>
    <%= link_to "Sign Up", new_user_url %>
  <% end %>

<%= yield %>

</body>
</html>
